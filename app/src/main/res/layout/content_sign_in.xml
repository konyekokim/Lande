<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.konye.lande.SignInActivity"
    tools:showIn="@layout/activity_sign_in"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/textView"
        fontPath="helvetica_ultra_light.ttf"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/welcome2"
        android:gravity="center"
        android:text="Sign In here"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="50sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:hint="Username"
        android:inputType="textPersonName"
        android:layout_marginTop="70dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@drawable/curved_rectangle"
        android:id="@+id/username_edit_text"
        fontPath="helvetica_font_normal.ttf"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="8dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@drawable/curved_rectangle"
        android:id="@+id/password_edit_text"
        fontPath="helvetica_font_normal.ttf"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="55dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="70dp"
        android:text="Sign In"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:stateListAnimator="@null"
        android:id="@+id/sign_in_button"
        android:background="@drawable/crvd_sign_butn_rect"
        fontPath="helvetica_bold.ttf"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgotten Password?"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#e44666"
        android:layout_marginTop="10dp"
        android:id="@+id/forgotten_password_TextView"
        fontPath="helvetica_bold.ttf"/>

</LinearLayout>
