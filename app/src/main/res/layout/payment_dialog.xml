<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="25dp"
        android:paddingStart="25dp"
        android:text="To verify coordinates, you will have to pay total sum in Naira"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:singleLine="false"
        android:maxLines="2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="50,000"
        android:textSize="47sp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:id="@+id/payment_amount_textView"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:text="Pay Now"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:stateListAnimator="@null"
        android:id="@+id/pay_now_butn"
        android:background="@drawable/crvd_reg_butn_rect"
        android:layout_marginBottom="20dp"
        fontPath="helvetica_bold.ttf"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="3dp"
        android:text="+ Add Card"
        android:textColor="#e44666"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:stateListAnimator="@null"
        android:id="@+id/add_card_butn"
        android:background="@drawable/crvd_trsprnt_add_card_butn_rect"
        android:layout_marginBottom="50dp"
        fontPath="helvetica_bold.ttf"/>

</LinearLayout>
